# Stripe Configuration
# Get these from https://dashboard.stripe.com/apikeys

# Secret key for server-side operations
STRIPE_SECRET_KEY=sk_test_YOUR_SECRET_KEY_HERE

# Publishable key for client-side operations
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Webhook secret for validating webhook signatures
# Get this from https://dashboard.stripe.com/webhooks after creating a webhook endpoint
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE

# Frontend environment variables for Next.js
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY_HERE

# Price IDs for subscription plans (create these in Stripe Dashboard)
# Or use the setup script to create them automatically
NEXT_PUBLIC_STRIPE_STARTER_MONTHLY=price_YOUR_STARTER_MONTHLY_PRICE_ID
NEXT_PUBLIC_STRIPE_STARTER_YEARLY=price_YOUR_STARTER_YEARLY_PRICE_ID
NEXT_PUBLIC_STRIPE_PRO_MONTHLY=price_YOUR_PRO_MONTHLY_PRICE_ID
NEXT_PUBLIC_STRIPE_PRO_YEARLY=price_YOUR_PRO_YEARLY_PRICE_ID

# Optional: Stripe CLI webhook forwarding (for local development)
# stripe listen --forward-to localhost:8000/api/stripe/webhooks