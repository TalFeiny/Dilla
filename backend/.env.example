# Dilla AI Backend Environment Variables
# Copy this file to .env and fill in your values

# Database
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Security
SECRET_KEY=your-secret-key-here-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# External APIs
OPENAI_API_KEY=sk-your-openai-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
TAVILY_API_KEY=tvly-your-tavily-key
FIRECRAWL_API_KEY=fc-your-firecrawl-key
CLAUDE_API_KEY=sk-ant-your-claude-key
GOOGLE_API_KEY=your-google-api-key

# Model Configuration (for extraction with fallbacks)
PRIMARY_EXTRACTION_MODEL=claude-3-5-sonnet-20241022
FALLBACK_MODEL_1=claude-3-sonnet-20240229
FALLBACK_MODEL_2=gpt-4-turbo-preview
FALLBACK_MODEL_3=gemini-1.5-pro

# Redis (for caching and background tasks)
REDIS_URL=redis://localhost:6379

# Environment
ENVIRONMENT=development
DEBUG=True

# Python
PYTHON_PATH=python3

# CORS (comma-separated origins)
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://dilla.ai"]

# Server
HOST=0.0.0.0
PORT=8000

# Celery (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# File Upload
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# Logging
LOG_LEVEL=INFO
LOG_FILE=backend.log

# API Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Feature Flags
ENABLE_STREAMING=True
ENABLE_WEBSOCKET=True
ENABLE_MULTI_AGENT=True
ENABLE_RL_AGENT=True

# Model Settings
DEFAULT_LLM_MODEL=gpt-4
DEFAULT_EMBEDDING_MODEL=text-embedding-ada-002
DEFAULT_TEMPERATURE=0.7
MAX_TOKENS=2000

# Performance
WORKER_COUNT=4
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKER_CONNECTIONS=1000
KEEPALIVE=5

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=False
PROMETHEUS_PORT=9090

# AWS (optional, for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=

# Email (optional, for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
FROM_EMAIL=