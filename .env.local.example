# Dilla AI Environment Variables - LOCAL DEVELOPMENT
# Copy this file to .env.local and fill in your values

# Backend URL - Used by all frontend connectors
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8000
FASTAPI_URL=http://localhost:8000

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Critical API Keys for Data Fetching
TAVILY_API_KEY=tvly-YOUR_KEY_HERE
NEXT_PUBLIC_TAVILY_API_KEY=tvly-YOUR_KEY_HERE

FIRECRAWL_API_KEY=fc-YOUR_KEY_HERE
NEXT_PUBLIC_FIRECRAWL_API_KEY=fc-YOUR_KEY_HERE

# AI Model Keys
ANTHROPIC_API_KEY=sk-ant-YOUR_KEY_HERE
NEXT_PUBLIC_ANTHROPIC_API_KEY=sk-ant-YOUR_KEY_HERE
CLAUDE_API_KEY=sk-ant-YOUR_KEY_HERE

OPENAI_API_KEY=sk-YOUR_KEY_HERE
NEXT_PUBLIC_OPENAI_API_KEY=sk-YOUR_KEY_HERE

# Stripe (optional)
STRIPE_SECRET_KEY=sk_test_YOUR_KEY_HERE
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_KEY_HERE

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Environment
NODE_ENV=development
NEXT_PUBLIC_NODE_ENV=development

# Feature Flags for Migration
NEXT_PUBLIC_USE_FASTAPI_COMPANIES=true
NEXT_PUBLIC_USE_FASTAPI_PWERM=true
NEXT_PUBLIC_USE_FASTAPI_PORTFOLIO=true
NEXT_PUBLIC_USE_FASTAPI_DOCUMENTS=true

# IMPORTANT: Get free API keys from:
# - Tavily: https://tavily.com (search API)
# - Firecrawl: https://firecrawl.dev (web scraping)
# - Anthropic: https://console.anthropic.com (Claude API)
# - OpenAI: https://platform.openai.com (GPT API)
# - Supabase: https://supabase.com (database)